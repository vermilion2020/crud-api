{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "Simple CRUD API",
  "engines": {
    "node": ">=22.14.0"
  },
  "main": "./src/server.ts",
  "type": "module",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon ./src/server.ts",
    "start:prod": "cross-env NODE_ENV=production npm run build && node dist/bundle.js",
    "start:multi": "cross-env MODE_CLUSTER=CLUSTER nodemon ./src/server.ts",
    "test": "jest",
    "build": "webpack"
  },
  "author": "vermilion2020",
  "dependencies": {
    "dotenv": "^16.5.0",
    "eslint": "^9.26.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "uuid": "^11.1.0"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts",
    "ignore": ["dist/**"],
    "exec": "node --loader ts-node/esm --no-warnings=ExperimentalWarning"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^22.15.17",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1"
  }
}
